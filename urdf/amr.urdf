<?xml version="1.0"?>
<robot name="amr">

  <material name="gray">
    <color rgba="0.6 0.6 0.6 1"/>
  </material>

  <material name="black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>

  <!-- gazebo_ros2_control -->
  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <parameters>/home/akshat/amr_ws/src/amr_description/config/controllers.yaml</parameters>
    </plugin>
  </gazebo>
  <!--IMU sensor plugin from gazebo library
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
        <ros>
          <namespace>/</namespace>
          <remapping>~/out:=imu</remapping>
        </ros>
        <frame_name>imu_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>-->


  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.075"/> 
        <!--size="0.4 0.3 0.15"/>-->
      </geometry>
      <origin xyz="0 0 0.030"/>
      <material name="gray"/>
    </visual>


    <collision>
      <geometry>
        <!--<box size="0.4 0.3 0.15"/>-->
        <cylinder radius="0.15" length="0.075"/>
      </geometry>
      <origin xyz="0 0 0.030"/>
    </collision>


    <inertial>
      <mass value="6.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.03" iyy="0.03" izz="0.05"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!--Adding IMU link attached to base link-->
  <link name = "imu_link"> 
    <visual>
      <geometry>
        <box size = "0.04 0.04 0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name = "imu_baselink_joint" type = "fixed">
    <child link = "imu_link"/>
    <parent link = "base_link"/>
    <origin xyz="0 0 0.015" rpy="0 0 0"/>
  </joint>


  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <!-- Left wheel -->
  <link name="left_wheel">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>


    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.04"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Right wheel -->
  <link name="right_wheel">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>


    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.04"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>



  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.15 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.15 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="caster_wheel">

    <visual>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>

  </link>
  
  <joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.10 0 0"/>
  </joint>
 


  <!-- ros2_control -->
  <ros2_control name="AMRSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <joint name="left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>



  <gazebo reference="left_wheel">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
  </gazebo>

  <gazebo reference="right_wheel">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
  </gazebo>

  <gazebo reference="imu_link">
    <gravity>true</gravity>
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>50</update_rate>
      <visualize>true</visualize>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <ros>
          <namespace>/</namespace>
          <remapping>~/out:=imu</remapping>
        </ros>
        <frame_name>imu_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>




</robot>
